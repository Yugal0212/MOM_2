@model List<MOM.Models.AttendanceSummaryViewModel>

@{
    ViewData["Title"] = "Attendance Management";
}

<style>
    .attendance-page .card-modern {
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }

    .attendance-page .card-modern:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .attendance-page .card-header-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
        border: none;
    }

    .attendance-page .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .attendance-page .status-scheduled { background-color: #e3f2fd; color: #1976d2; }
    .attendance-page .status-inprogress { background-color: #fff8e1; color: #ffa000; }
    .attendance-page .status-completed { background-color: #e8f5e9; color: #388e3c; }
    .attendance-page .status-cancelled { background-color: #ffebee; color: #d32f2f; }

    .attendance-page .attendance-stat {
        text-align: center;
        padding: 10px;
        border-radius: 10px;
        background-color: #f8f9fa;
    }

    .attendance-page .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        display: block;
    }

    .attendance-page .stat-label {
        font-size: 0.75rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
</style>

<div class="attendance-page container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-gray-800">Attendance Overview</h1>
            <p class="text-muted">Track and manage attendance for all meetings</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3 animate-fadeInUp">
                <div class="card card-modern h-100">
                    <div class="card-header-modern">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <span class="badge bg-white bg-opacity-25 mb-2">@item.Meeting.MeetingTypeName</span>
                                <h5 class="card-title mb-0 text-white text-truncate" style="max-width: 200px;" title="@item.Meeting.Title">@item.Meeting.Title</h5>
                            </div>
                            @{
                                var statusClass = "";
                                switch (item.Meeting.Status) {
                                    case "Scheduled": statusClass = "status-scheduled"; break;
                                    case "InProgress": statusClass = "status-inprogress"; break;
                                    case "Completed": statusClass = "status-completed"; break;
                                    default: statusClass = "status-cancelled"; break;
                                }
                            }
                        </div>
                        <div class="mt-3 d-flex align-items-center small text-white text-opacity-75">
                            <i class="bi bi-calendar3 me-2"></i> @item.Meeting.MeetingDate.ToString("MMM dd, yyyy")
                        </div>
                        <div class="d-flex align-items-center small text-white text-opacity-75">
                            <i class="bi bi-clock me-2"></i> @item.Meeting.StartTime.ToString(@"hh\:mm")
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-4">
                                <div class="attendance-stat">
                                    <span class="stat-value text-primary">@item.TotalStaff</span>
                                    <span class="stat-label">Total</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="attendance-stat">
                                    <span class="stat-value text-success">@item.PresentCount</span>
                                    <span class="stat-label">Present</span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="attendance-stat">
                                    <span class="stat-value text-danger">@item.AbsentCount</span>
                                    <span class="stat-label">Absent</span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            @if (item.IsAttendanceTaken)
                            {
                                <a href="@Url.Action("Manage", new { meetingId = item.Meeting.MeetingId })" class="btn btn-outline-primary fw-semibold rounded-pill">
                                    <i class="bi bi-pencil-square me-2"></i>Update Attendance
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Manage", new { meetingId = item.Meeting.MeetingId })" class="btn btn-primary fw-semibold rounded-pill gradient-btn" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border:none;">
                                    <i class="bi bi-check2-square me-2"></i>Fill Attendance
                                </a>
                            }
                        </div>
                    </div>
                    @if(item.IsAttendanceTaken)
                    {
                         <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                            <div class="progress" style="height: 6px;">
                                @{
                                    var percent = item.TotalStaff > 0 ? (int)((double)item.PresentCount / item.TotalStaff * 100) : 0;
                                }
                                <div class="progress-bar bg-success" role="progressbar" style="width: @percent%" aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small class="text-muted mt-2 d-block text-center">@percent% Attendance Rate</small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
