@model MeetingVenue

@{
    ViewData["Title"] = "Create Meeting Venue";
}

<div class="pagetitle">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Create Meeting Venue</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Venues</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
    </div>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">New Meeting Venue</h5>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="MeetingVenueName" class="form-label">Venue Name <span class="text-danger">*</span></label>
                            <input asp-for="MeetingVenueName" class="form-control" placeholder="e.g., Conference Room A" />
                            <span asp-validation-for="MeetingVenueName" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i> Create Venue
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i> Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
