@section Scripts {
    <script>
        let currentPage = 1;
        let rowsPerPage = 10;
        let allRows = [];
        let filteredRows = [];
        let currentFilter = 'all';

        document.addEventListener('DOMContentLoaded', function() {
            const tableBody = document.getElementById('tableBody');
            if (tableBody) {
                allRows = Array.from(tableBody.getElementsByTagName('tr'));
                // Filter functionality is now handled server-side, so filteredRows is always allRows on load
                filteredRows = allRows;
                
                // Rows per page
                document.getElementById('rowsPerPage')?.addEventListener('change', function() {
                    rowsPerPage = parseInt(this.value);
                    currentPage = 1;
                    displayPage(currentPage);
                });
                
                displayPage(1);
            }
        });

        // Removed client-side filterAndSearch function as filtering is done server-side

        function displayPage(page) {
            const start = (page - 1) * rowsPerPage;
            const end = rowsPerPage === -1 ? filteredRows.length : start + rowsPerPage;
            
            allRows.forEach(row => row.style.display = 'none');
            filteredRows.slice(start, end).forEach(row => row.style.display = '');
            
            updatePagination();
            updatePageInfo(start, end);
        }

        function updatePagination() {
            const totalPages = rowsPerPage === -1 ? 1 : Math.ceil(filteredRows.length / rowsPerPage);
            const paginationEl = document.getElementById('pagination');
            
            if (!paginationEl || totalPages <= 1) {
                paginationEl.innerHTML = '';
                return;
            }
            
            let html = '';
            
            // Previous button
            html += `<li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                        <a class="page-link" href="#" onclick="changePage(${currentPage - 1}); return false;">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>`;
            
            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                    html += `<li class="page-item ${i === currentPage ? 'active' : ''}">
                                <a class="page-link" href="#" onclick="changePage(${i}); return false;">${i}</a>
                            </li>`;
                } else if (i === currentPage - 2 || i === currentPage + 2) {
                    html += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
                }
            }
            
            // Next button
            html += `<li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                        <a class="page-link" href="#" onclick="changePage(${currentPage + 1}); return false;">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>`;
            
            paginationEl.innerHTML = html;
        }

        function updatePageInfo(start, end) {
            const pageInfo = document.getElementById('pageInfo');
            if (pageInfo) {
                const showing = Math.min(end, filteredRows.length);
                pageInfo.textContent = `Showing ${start + 1} to ${showing} of ${filteredRows.length} entries`;
            }
        }

        function changePage(page) {
            const totalPages = rowsPerPage === -1 ? 1 : Math.ceil(filteredRows.length / rowsPerPage);
            if (page < 1 || page > totalPages) return;
            currentPage = page;
            displayPage(page);
        }

        function confirmDelete(id, title) {
            document.getElementById('meetingTitle').textContent = title;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Meeting")/' + id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
