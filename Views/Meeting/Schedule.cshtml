@model MOM.Models.Meeting

@{
    ViewData["Title"] = "Schedule Meeting";
}

<style>
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@keyframes slideInLeft {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .schedule-page { overflow-x: hidden; }
    .animate-fadeInUp { animation: fadeInUp 0.6s ease-out forwards; }
    .animate-slideInLeft { animation: slideInLeft 0.5s ease-out forwards; }

    .schedule-page .form-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        background: white;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .schedule-page .form-card:hover {
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
    }

    .schedule-page .card-header-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 20px 20px 0 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .schedule-page .card-header-custom::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 3s ease-in-out infinite;
    }

    .schedule-page .card-header-custom h2 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        position: relative;
        z-index: 1;
    }

    .schedule-page .card-header-custom p {
        margin: 10px 0 0 0;
        opacity: 0.95;
        font-size: 1rem;
        position: relative;
        z-index: 1;
    }

    .schedule-page .form-section {
        padding: 40px;
    }

    .schedule-page .section-title {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
        font-size: 1.3rem;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .schedule-page .section-title i {
        -webkit-text-fill-color: #667eea;
        font-size: 1.5rem;
    }

    .schedule-page .form-label {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 8px;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .schedule-page .form-label i {
        color: #667eea;
        font-size: 1rem;
    }

    .schedule-page .form-control,
    .schedule-page .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 12px 16px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

    .schedule-page .form-control:focus,
    .schedule-page .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        outline: none;
    }

    .schedule-page textarea.form-control {
        min-height: 100px;
        resize: vertical;
    }

    .schedule-page .input-group-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        border-radius: 12px 0 0 12px;
        padding: 0 16px;
    }

    .schedule-page .input-group .form-control {
        border-left: none;
        border-radius: 0 12px 12px 0;
    }

    .schedule-page .form-check-input {
        width: 1.5rem;
        height: 1.5rem;
        border: 2px solid #667eea;
        cursor: pointer;
    }

    .schedule-page .form-check-input:checked {
        background-color: #667eea;
        border-color: #667eea;
    }

    .schedule-page .form-check-label {
        font-weight: 500;
        color: #4a5568;
        margin-left: 10px;
        cursor: pointer;
    }

    .schedule-page .btn-submit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 15px 50px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
    }

    .schedule-page .btn-submit:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
    }

    .schedule-page .btn-cancel {
        background: white;
        border: 2px solid #e2e8f0;
        padding: 15px 50px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        color: #4a5568;
        transition: all 0.3s ease;
    }

    .schedule-page .btn-cancel:hover {
        border-color: #667eea;
        color: #667eea;
        background: rgba(102, 126, 234, 0.05);
    }

    .schedule-page .priority-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .schedule-page .priority-badge.low {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .schedule-page .priority-badge.medium {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .schedule-page .priority-badge.high {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }

    .schedule-page .priority-badge.urgent {
        background: linear-gradient(135deg, #f5576c 0%, #fa709a 100%);
        color: white;
    }

    .schedule-page .info-card {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        border-left: 4px solid #667eea;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
    }

    .schedule-page .info-card i {
        color: #667eea;
        font-size: 1.5rem;
        margin-right: 15px;
    }

    .schedule-page .divider {
        height: 2px;
        background: linear-gradient(90deg, transparent 0%, #667eea 50%, transparent 100%);
        margin: 40px 0;
    }

    @@media (max-width: 768px) {
        .schedule-page .form-section {
            padding: 25px 20px;
        }
        
        .schedule-page .card-header-custom {
            padding: 25px 20px;
        }

        .schedule-page .card-header-custom h2 {
            font-size: 1.5rem;
        }

        .schedule-page .btn-submit,
        .schedule-page .btn-cancel {
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>

<div class="schedule-page">
    <div class="pagetitle animate-fadeInUp">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="bi bi-calendar-plus me-2"></i>Schedule Meeting</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Meeting")">Meetings</a></li>
                        <li class="breadcrumb-item active">Schedule</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section class="section">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show animate-fadeInUp" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="form-card animate-fadeInUp" style="animation-delay: 0.2s;">
                    <div class="card-header-custom">
                        <i class="bi bi-calendar-event" style="font-size: 3rem;"></i>
                        <h2>Create New Meeting</h2>
                        <p>Fill in the details below to schedule a meeting</p>
                    </div>

                    <div class="form-section">
                        <form asp-action="Schedule" method="post">
                            @Html.AntiForgeryToken()

                            <!-- Meeting Basic Information -->
                            <div class="animate-slideInLeft" style="animation-delay: 0.3s;">
                                <h4 class="section-title">
                                    <i class="bi bi-info-circle-fill"></i>
                                    Basic Information
                                </h4>

                                <div class="row g-3">
                                    <div class="col-md-8">
                                        <label asp-for="MeetingDescription" class="form-label">
                                            <i class="bi bi-card-heading"></i>
                                            Meeting Title / Description
                                        </label>
                                        <input asp-for="MeetingDescription" class="form-control" placeholder="Enter meeting title or description" />
                                        <span asp-validation-for="MeetingDescription" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="Priority" class="form-label">
                                            <i class="bi bi-flag-fill"></i>
                                            Priority
                                        </label>
                                        <select asp-for="Priority" class="form-select">
                                            <option value="Low">Low</option>
                                            <option value="Medium" selected>Medium</option>
                                            <option value="High">High</option>
                                            <option value="Urgent">Urgent</option>
                                        </select>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="MeetingTypeId" class="form-label">
                                            <i class="bi bi-tag-fill"></i>
                                            Meeting Type
                                        </label>
                                        <select asp-for="MeetingTypeId" class="form-select" id="meetingTypeSelect">
                                            <option value="">-- Select Meeting Type --</option>
                                            @foreach (var type in (IEnumerable<SelectListItem>)ViewBag.MeetingTypes)
                                            {
                                                <option value="@type.Value" data-name="@type.Text" selected="@type.Selected">@type.Text</option>
                                            }
                                        </select>
                                        <input asp-for="MeetingTypeName" type="hidden" id="meetingTypeName" />
                                        <span asp-validation-for="MeetingTypeId" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="MeetingVenueId" class="form-label">
                                            <i class="bi bi-geo-alt-fill"></i>
                                            Venue
                                        </label>
                                        <select asp-for="MeetingVenueId" class="form-select" id="venueSelect">
                                            <option value="">-- Select Venue --</option>
                                            @foreach (var venue in (IEnumerable<SelectListItem>)ViewBag.Venues)
                                            {
                                                <option value="@venue.Value" data-name="@venue.Text" selected="@venue.Selected">@venue.Text</option>
                                            }
                                        </select>
                                        <input asp-for="VenueName" type="hidden" id="venueName" />
                                        <span asp-validation-for="MeetingVenueId" class="text-danger small"></span>
                                    </div>

                                    <!-- Added Date Time fields -->
                                    <div class="col-md-4">
                                        <label asp-for="MeetingDate" class="form-label">
                                            <i class="bi bi-calendar"></i>
                                            Date
                                        </label>
                                        <input asp-for="MeetingDate" type="date" class="form-control" />
                                        <span asp-validation-for="MeetingDate" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="StartTime" class="form-label">
                                            <i class="bi bi-clock"></i>
                                            Start Time
                                        </label>
                                        <input asp-for="StartTime" type="time" class="form-control" />
                                        <span asp-validation-for="StartTime" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="EndTime" class="form-label">
                                            <i class="bi bi-clock-history"></i>
                                            End Time
                                        </label>
                                        <input asp-for="EndTime" type="time" class="form-control" />
                                        <span asp-validation-for="EndTime" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Department and Description -->
                            <div class="animate-slideInLeft" style="animation-delay: 0.5s;">
                                <h4 class="section-title">
                                    <i class="bi bi-card-text"></i>
                                    Additional Details
                                </h4>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="DepartmentId" class="form-label">
                                            <i class="bi bi-building"></i>
                                            Department
                                        </label>
                                        <select asp-for="DepartmentId" class="form-select" id="departmentSelect">
                                            <option value="">-- Select Department --</option>
                                            @foreach (var dept in (IEnumerable<SelectListItem>)ViewBag.Departments)
                                            {
                                                <option value="@dept.Value" data-name="@dept.Text" selected="@dept.Selected">@dept.Text</option>
                                            }
                                        </select>
                                        <input asp-for="DepartmentName" type="hidden" id="departmentName" />
                                        <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-12">
                                        <label asp-for="MeetingDescription" class="form-label">
                                            <i class="bi bi-card-text"></i>
                                            Description / Agenda
                                        </label>
                                        <textarea asp-for="MeetingDescription" class="form-control" placeholder="Enter meeting description or agenda details"></textarea>
                                        <span asp-validation-for="MeetingDescription" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="DocumentPath" class="form-label">
                                            <i class="bi bi-folder2-open"></i>
                                            Document Link (Optional)
                                        </label>
                                        <input asp-for="DocumentPath" type="url" class="form-control" placeholder="https://sharepoint.com/doc/..." />
                                        <span asp-validation-for="DocumentPath" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="divider"></div>

                            <!-- Submit Buttons -->
                            <div class="text-center animate-fadeInUp" style="animation-delay: 0.7s;">
                                <button type="submit" class="btn btn-submit me-3">
                                    <i class="bi bi-calendar-check me-2"></i>
                                    Schedule Meeting
                                </button>
                                <a href="@Url.Action("Index", "Meeting")" class="btn btn-cancel">
                                    <i class="bi bi-x-circle me-2"></i>
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Update hidden fields when dropdowns change
        document.getElementById('meetingTypeSelect')?.addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            document.getElementById('meetingTypeName').value = selectedOption.getAttribute('data-name') || '';
        });

        document.getElementById('venueSelect')?.addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            document.getElementById('venueName').value = selectedOption.getAttribute('data-name') || '';
        });

        document.getElementById('departmentSelect')?.addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            document.getElementById('departmentName').value = selectedOption.getAttribute('data-name') || '';
        });

        // Set minimum date to today
        var today = new Date().toISOString().split('T')[0];
        var dateInput = document.querySelector('input[type="date"]');
        if (dateInput) {
            dateInput.setAttribute('min', today);
            if (!dateInput.value) {
                dateInput.value = today;
            }
        }

        // Form validation before submit
        document.querySelector('form')?.addEventListener('submit', function(e) {
            var startTime = document.querySelector('input[name="StartTime"]').value;
            var endTime = document.querySelector('input[name="EndTime"]').value;
            
            if (startTime && endTime && startTime >= endTime) {
                e.preventDefault();
                alert('End time must be after start time!');
                return false;
            }
        });
    </script>
}
