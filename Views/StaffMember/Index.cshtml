<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-danger me-2"></i>Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete <strong><span id="staffName"></span></strong>?</p>
                <small class="text-muted">This action cannot be undone.</small>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete Staff</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Pagination functionality for Staff table
        let staffCurrentPage = 1;
        let staffRowsPerPage = 10;
        let staffAllRows = [];
        let staffFilteredRows = [];

        document.addEventListener('DOMContentLoaded', function() {
            const tableBody = document.getElementById('staffTableBody');
            if (tableBody) {
                staffAllRows = Array.from(tableBody.getElementsByTagName('tr'));
                staffFilteredRows = staffAllRows;
                
                // Initialize pagination
                const rowsSelect = document.getElementById('staffRowsPerPage');
                if (rowsSelect) {
                    rowsSelect.addEventListener('change', function() {
                        staffRowsPerPage = parseInt(this.value);
                        staffCurrentPage = 1;
                        displayStaffPage(staffCurrentPage);
                    });
                }
                
                // Search functionality
                const searchInput = document.getElementById('staffSearchInput');
                const clearBtn = document.getElementById('clearSearchBtn');
                if (searchInput) {
                    searchInput.addEventListener('keyup', function() {
                        const searchTerm = this.value.toLowerCase();
                        staffFilteredRows = staffAllRows.filter(row => {
                            const text = row.textContent.toLowerCase();
                            return text.includes(searchTerm);
                        });
                        staffCurrentPage = 1;
                        displayStaffPage(staffCurrentPage);
                        
                        // Toggle clear button
                        if (clearBtn) {
                            if (this.value.length > 0) {
                                clearBtn.classList.add('active');
                            } else {
                                clearBtn.classList.remove('active');
                            }
                        }
                    });
                    
                    // Clear button functionality
                    if (clearBtn) {
                        clearBtn.addEventListener('click', function() {
                            searchInput.value = '';
                            staffFilteredRows = staffAllRows;
                            staffCurrentPage = 1;
                            displayStaffPage(staffCurrentPage);
                            clearBtn.classList.remove('active');
                            searchInput.focus();
                        });
                    }
                }
                
                displayStaffPage(staffCurrentPage);
            }
        });

        function displayStaffPage(page) {
            const start = (page - 1) * staffRowsPerPage;
            const end = staffRowsPerPage === -1 ? staffFilteredRows.length : start + staffRowsPerPage;
            
            // Hide all rows
            staffAllRows.forEach(row => row.style.display = 'none');
            
            // Show only rows for current page
            const rowsToShow = staffRowsPerPage === -1 ? staffFilteredRows : staffFilteredRows.slice(start, end);
            rowsToShow.forEach(row => row.style.display = '');
            
            // Update page info
            const totalRows = staffFilteredRows.length;
            const showingStart = totalRows === 0 ? 0 : start + 1;
            const showingEnd = Math.min(end, totalRows);
            const infoText = `Showing ${showingStart} to ${showingEnd} of ${totalRows} entries`;
            const pageInfoEl = document.getElementById('staffPageInfo');
            const pageInfoTopEl = document.getElementById('staffPageInfoTop');
            if (pageInfoEl) {
                pageInfoEl.textContent = infoText;
            }
            if (pageInfoTopEl) {
                pageInfoTopEl.textContent = infoText;
            }
            
            // Update pagination buttons
            updateStaffPagination();
        }

        function updateStaffPagination() {
            const totalPages = staffRowsPerPage === -1 ? 1 : Math.ceil(staffFilteredRows.length / staffRowsPerPage);
            const paginationEl = document.getElementById('staffPagination');
            if (!paginationEl) return;
            
            paginationEl.innerHTML = '';
            
            if (totalPages <= 1) return;
            
            // Previous button
            const prevLi = document.createElement('li');
            prevLi.className = `page-item ${staffCurrentPage === 1 ? 'disabled' : ''}`;
            prevLi.innerHTML = `<a class="page-link" href="#" onclick="changeStaffPage(${staffCurrentPage - 1}); return false;">
                <i class="bi bi-chevron-left"></i>
            </a>`;
            paginationEl.appendChild(prevLi);
            
            // Page numbers
            const maxPagesToShow = 5;
            let startPage = Math.max(1, staffCurrentPage - Math.floor(maxPagesToShow / 2));
            let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
            
            if (endPage - startPage < maxPagesToShow - 1) {
                startPage = Math.max(1, endPage - maxPagesToShow + 1);
            }
            
            // First page
            if (startPage > 1) {
                const li = document.createElement('li');
                li.className = 'page-item';
                li.innerHTML = `<a class="page-link" href="#" onclick="changeStaffPage(1); return false;">1</a>`;
                paginationEl.appendChild(li);
                
                if (startPage > 2) {
                    const dots = document.createElement('li');
                    dots.className = 'page-item disabled';
                    dots.innerHTML = '<a class="page-link">...</a>';
                    paginationEl.appendChild(dots);
                }
            }
            
            // Page numbers
            for (let i = startPage; i <= endPage; i++) {
                const li = document.createElement('li');
                li.className = `page-item ${i === staffCurrentPage ? 'active' : ''}`;
                li.innerHTML = `<a class="page-link" href="#" onclick="changeStaffPage(${i}); return false;">${i}</a>`;
                paginationEl.appendChild(li);
            }
            
            // Last page
            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    const dots = document.createElement('li');
                    dots.className = 'page-item disabled';
                    dots.innerHTML = '<a class="page-link">...</a>';
                    paginationEl.appendChild(dots);
                }
                
                const li = document.createElement('li');
                li.className = 'page-item';
                li.innerHTML = `<a class="page-link" href="#" onclick="changeStaffPage(${totalPages}); return false;">${totalPages}</a>`;
                paginationEl.appendChild(li);
            }
            
            // Next button
            const nextLi = document.createElement('li');
            nextLi.className = `page-item ${staffCurrentPage === totalPages ? 'disabled' : ''}`;
            nextLi.innerHTML = `<a class="page-link" href="#" onclick="changeStaffPage(${staffCurrentPage + 1}); return false;">
                <i class="bi bi-chevron-right"></i>
            </a>`;
            paginationEl.appendChild(nextLi);
        }

        function changeStaffPage(page) {
            const totalPages = staffRowsPerPage === -1 ? 1 : Math.ceil(staffFilteredRows.length / staffRowsPerPage);
            if (page < 1 || page > totalPages) return;
            staffCurrentPage = page;
            displayStaffPage(staffCurrentPage);
            
            // Smooth scroll to table
            const tableCard = document.querySelector('.staff-page .card-modern');
            if (tableCard) {
                tableCard.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        // Delete confirmation
        function confirmDelete(id, name) {
            document.getElementById('staffName').textContent = name;
            var form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete", "StaffMember")/' + id;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
