@model Staff

@{
    ViewData["Title"] = "Add Staff Member";
}

<div class="pagetitle">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Add Staff Member</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Staff Members</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </nav>
        </div>
    </div>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">New Staff Member Details</h5>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="StaffName" class="form-label">Staff Name <span class="text-danger">*</span></label>
                                <input asp-for="StaffName" class="form-control" placeholder="John Smith" />
                                <span asp-validation-for="StaffName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="EmailAddress" class="form-label">Email Address <span class="text-danger">*</span></label>
                                <input asp-for="EmailAddress" class="form-control" type="email" placeholder="john.smith@company.com" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MobileNo" class="form-label">Mobile Number <span class="text-danger">*</span></label>
                                <input asp-for="MobileNo" class="form-control" type="tel" placeholder="+1(555)123-4567" />
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DepartmentId" class="form-label">Department <span class="text-danger">*</span></label>
                                <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                                    <option value="">-- Select Department --</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Remarks" class="form-label">Remarks</label>
                                <input asp-for="Remarks" class="form-control" placeholder="Position, notes, etc." />
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i> Add Member
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i> Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
