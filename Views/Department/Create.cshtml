@model MOM.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="pagetitle">
    <h1>Create Department</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Department")">Departments</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Department Information</h5>

                    <!-- Department Form -->
                    <form asp-action="Create" method="post" class="row g-3">
                        <div class="col-md-12">
                            <label asp-for="DepartmentName" class="form-label">Department Name</label>
                            <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" required />
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <div class="d-flex justify-content-end gap-2">
                                <a href="@Url.Action("Index", "Department")" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i> Create Department
                                </button>
                            </div>
                        </div>
                    </form><!-- End Department Form -->

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
