@model MOM.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<style>
    .details-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2.5rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }
    
    .details-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }
    
    .details-hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
    }
    
    .details-hero .dept-code {
        font-size: 1.1rem;
        opacity: 0.9;
        font-weight: 500;
        position: relative;
        z-index: 1;
    }
    
    .status-badge-large {
        position: absolute;
        top: 2rem;
        right: 2rem;
        padding: 0.75rem 1.5rem;
        border-radius: 30px;
        font-size: 1rem;
        font-weight: 600;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        z-index: 1;
    }
    
    .info-card-modern {
        background: white;
        border-radius: 16px;
        padding: 1.8rem;
        height: 100%;
        border: none;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .info-card-modern:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }
    
    .info-card-modern::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--accent-color);
    }
    
    .info-card-modern.primary::before { background: linear-gradient(180deg, #667eea 0%, #764ba2 100%); }
    .info-card-modern.success::before { background: linear-gradient(180deg, #11998e 0%, #38ef7d 100%); }
    .info-card-modern.info::before { background: linear-gradient(180deg, #4facfe 0%, #00f2fe 100%); }
    .info-card-modern.warning::before { background: linear-gradient(180deg, #f093fb 0%, #f5576c 100%); }
    
    .info-card-modern .icon-wrapper {
        width: 60px;
        height: 60px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        font-size: 1.8rem;
    }
    
    .info-card-modern.primary .icon-wrapper {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        color: #667eea;
    }
    
    .info-card-modern.success .icon-wrapper {
        background: linear-gradient(135deg, rgba(17, 153, 142, 0.1) 0%, rgba(56, 239, 125, 0.1) 100%);
        color: #11998e;
    }
    
    .info-card-modern.info .icon-wrapper {
        background: linear-gradient(135deg, rgba(79, 172, 254, 0.1) 0%, rgba(0, 242, 254, 0.1) 100%);
        color: #4facfe;
    }
    
    .info-card-modern.warning .icon-wrapper {
        background: linear-gradient(135deg, rgba(240, 147, 251, 0.1) 0%, rgba(245, 87, 108, 0.1) 100%);
        color: #f093fb;
    }
    
    .info-card-modern .label {
        font-size: 0.875rem;
        color: #8b92a7;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }
    
    .info-card-modern .value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin: 0;
    }
    
    .stats-card {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        height: 100%;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
    }
    
    .stats-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 35px rgba(0, 0, 0, 0.15);
    }
    
    .stats-card.stat-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .stats-card.stat-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
    }
    
    .stats-card.stat-info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }
    
    .stats-card .stat-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.9;
    }
    
    .stats-card .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    
    .stats-card .stat-label {
        font-size: 1rem;
        font-weight: 500;
        opacity: 0.9;
    }
    
    .description-card {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-top: 1.5rem;
    }
    
    .description-card .description-label {
        font-size: 0.875rem;
        color: #8b4513;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1rem;
    }
    
    .description-card .description-text {
        font-size: 1.1rem;
        color: #5d4037;
        line-height: 1.8;
        margin: 0;
    }
    
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }
    
    .btn-modern {
        padding: 0.875rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.875rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    .btn-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
    }
    
    .btn-modern.btn-back {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .btn-modern.btn-edit {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }
    
    .btn-modern.btn-delete {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }
    
    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        position: relative;
        padding-left: 1rem;
    }
    
    .section-title::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 80%;
        background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
        border-radius: 2px;
    }
    
    @@media (max-width: 768px) {
        .details-hero h1 { font-size: 1.8rem; }
        .status-badge-large { position: static; margin-top: 1rem; display: inline-block; }
        .action-buttons { flex-direction: column; }
        .btn-modern { width: 100%; }
    }
</style>

<div class="pagetitle">
    <h1>Department Details</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Department")">Departments</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <!-- Hero Section -->
            <div class="details-hero">
                <h1>@Model.Name</h1>
                <div class="dept-code"><i class="bi bi-hash"></i> @Model.Code</div>
                @if (Model.IsActive)
                {
                    <span class="status-badge-large">
                        <i class="bi bi-check-circle-fill me-2"></i>Active
                    </span>
                }
                else
                {
                    <span class="status-badge-large">
                        <i class="bi bi-x-circle-fill me-2"></i>Inactive
                    </span>
                }
            </div>

            <!-- Information Cards -->
            <div class="section-title">Department Information</div>
            <div class="row g-4 mb-4">
                <div class="col-md-6 col-lg-3">
                    <div class="info-card-modern primary">
                        <div class="icon-wrapper">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="label">Department Code</div>
                        <h3 class="value">@Model.Code</h3>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="info-card-modern success">
                        <div class="icon-wrapper">
                            <i class="bi bi-person-badge"></i>
                        </div>
                        <div class="label">Manager</div>
                        <h3 class="value" style="font-size: 1.2rem;">@(Model.Manager ?? "Not Assigned")</h3>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="info-card-modern info">
                        <div class="icon-wrapper">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="label">Employee Count</div>
                        <h3 class="value">@Model.EmployeeCount</h3>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="info-card-modern warning">
                        <div class="icon-wrapper">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                        <div class="label">Created Date</div>
                        <h3 class="value" style="font-size: 1rem;">@Model.CreatedDate.ToString("MMM dd, yyyy")</h3>
                    </div>
                </div>
            </div>

            <!-- Description Card -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="description-card">
                    <div class="description-label"><i class="bi bi-info-circle me-2"></i>Description</div>
                    <p class="description-text">@Model.Description</p>
                </div>
            }

            <!-- Statistics Section -->
            <div class="section-title mt-5">Department Statistics</div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="stats-card stat-primary">
                        <div class="stat-icon">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div class="stat-value">@Model.EmployeeCount</div>
                        <div class="stat-label">Total Employees</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card stat-success">
                        <div class="stat-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="stat-value">@((DateTime.Now - Model.CreatedDate).Days / 365)</div>
                        <div class="stat-label">Years Established</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card stat-info">
                        <div class="stat-icon">
                            <i class="bi bi-flag-fill"></i>
                        </div>
                        <div class="stat-value">@(Model.IsActive ? "Active" : "Inactive")</div>
                        <div class="stat-label">Current Status</div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="@Url.Action("Index", "Department")" class="btn-modern btn-back">
                    <i class="bi bi-arrow-left me-2"></i> Back to List
                </a>
                <a href="@Url.Action("Edit", "Department", new { id = Model.Id })" class="btn-modern btn-edit">
                    <i class="bi bi-pencil me-2"></i> Edit Department
                </a>
                <button type="button" class="btn-modern btn-delete" onclick="confirmDelete(@Model.Id, '@Model.Name')">
                    <i class="bi bi-trash me-2"></i> Delete Department
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the department "<span id="departmentName"></span>"?
                <br />
                <small class="text-muted">This action cannot be undone.</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('departmentName').textContent = name;
            var form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete", "Department")/' + id;
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}
