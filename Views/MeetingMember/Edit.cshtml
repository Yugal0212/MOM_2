@model MeetingMember

@{
    ViewData["Title"] = "Edit Meeting Member";
}

<style>
    .edit-hero {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 20px;
        padding: 2rem 2.5rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 10px 40px rgba(240, 147, 251, 0.3);
        position: relative;
        overflow: hidden;
    }
    
    .edit-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -10%;
        width: 250px;
        height: 250px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }
    
    .edit-hero h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
    }
    
    .edit-hero p {
        font-size: 1rem;
        opacity: 0.95;
        margin: 0;
        position: relative;
        z-index: 1;
    }
    
    .form-card-modern {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.08);
        border: none;
    }
    
    .form-section-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 3px solid;
        border-image: linear-gradient(90deg, #f093fb 0%, #f5576c 100%) 1;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .form-group-modern {
        margin-bottom: 1.5rem;
    }
    
    .form-label-modern {
        font-size: 0.875rem;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .form-label-modern i {
        color: #f093fb;
        font-size: 1rem;
    }
    
    .form-control-modern {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 0.875rem 1.25rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }
    
    .form-control-modern:focus {
        border-color: #f093fb;
        box-shadow: 0 0 0 0.2rem rgba(240, 147, 251, 0.15);
        background: white;
        outline: none;
    }
    
    .form-control-modern:hover {
        border-color: #f5576c;
        background: white;
    }
    
    .switch-container {
        background: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);
        padding: 1.5rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }
    
    .switch-label {
        font-size: 1rem;
        font-weight: 600;
        color: #2c3e50;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
    }
    
    .switch-label i {
        font-size: 1.3rem;
    }
    
    .form-check-input-modern {
        width: 60px;
        height: 30px;
        cursor: pointer;
        border: none;
        background-color: #ccc;
    }
    
    .form-check-input-modern:checked {
        background-color: #11998e;
        border-color: #11998e;
    }
    
    .form-check-input-modern:focus {
        box-shadow: 0 0 0 0.2rem rgba(17, 153, 142, 0.25);
    }
    
    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid #f0f0f0;
        justify-content: flex-end;
    }
    
    .btn-modern-form {
        padding: 1rem 2.5rem;
        border-radius: 12px;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.875rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-modern-form:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
    }
    
    .btn-cancel {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .btn-submit {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
    }
    
    .field-group {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        padding: 1.5rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
    }
    
    @@media (max-width: 768px) {
        .form-card-modern { padding: 1.5rem; }
        .edit-hero h1 { font-size: 1.5rem; }
        .form-actions { flex-direction: column; }
        .btn-modern-form { width: 100%; justify-content: center; }
    }
</style>

<div class="pagetitle">
    <h1>Edit Meeting Member</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "MeetingMember")">Meeting Members</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <!-- Hero Section -->
            <div class="edit-hero">
                <h1><i class="bi bi-pencil-square me-2"></i>Edit Meeting Member Information</h1>
                <p>Update member details and save changes</p>
            </div>

            <!-- Form Card -->
            <div class="form-card-modern">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="MeetingMemberId" />

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label asp-for="MeetingId" class="form-label-modern">
                                    <i class="bi bi-calendar-event"></i>
                                    Meeting
                                </label>
                                <select asp-for="MeetingId" class="form-select form-control-modern">
                                    <option value="">-- Select Meeting --</option>
                                    @if (ViewBag.Meetings != null)
                                    {
                                        foreach (dynamic item in ViewBag.Meetings)
                                        {
                                            <option value="@item.Id">@item.Title</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="MeetingId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label asp-for="StaffId" class="form-label-modern">
                                    <i class="bi bi-person"></i>
                                    Staff Member
                                </label>
                                <select asp-for="StaffId" class="form-select form-control-modern">
                                    <option value="">-- Select Staff --</option>
                                    @if (ViewBag.Staff != null)
                                    {
                                        foreach (dynamic item in ViewBag.Staff)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="StaffId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-12">
                            <div class="form-group-modern">
                                <label class="form-label-modern">
                                    <i class="bi bi-toggle-on"></i>
                                    Attendance
                                </label>
                                <div class="switch-container">
                                    <label class="switch-label">
                                        <i class="bi bi-check-circle"></i>
                                        Is Present
                                    </label>
                                    <input asp-for="IsPresent" class="form-check-input form-check-input-modern" type="checkbox" role="switch" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-section-title">
                        <i class="bi bi-sticky-fill"></i>
                        Remarks
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-12">
                            <div class="form-group-modern">
                                <label asp-for="Remarks" class="form-label-modern">
                                    <i class="bi bi-journal-text"></i>
                                    Remarks
                                </label>
                                <textarea asp-for="Remarks" class="form-control form-control-modern" rows="3" placeholder="Any additional notes..."></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="form-actions">
                        <a href="@Url.Action("Index", "MeetingMember")" class="btn-modern-form btn-cancel">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn-modern-form btn-submit">
                            <i class="bi bi-check-circle"></i> Update Member
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
