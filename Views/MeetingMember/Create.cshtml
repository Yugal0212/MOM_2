@model MeetingMember

@{
    ViewData["Title"] = "Add Meeting Member";
}

<div class="pagetitle">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Add Meeting Member</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Meeting Members</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </nav>
        </div>
    </div>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">New Meeting Member Details</h5>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="MeetingId" class="form-label">Meeting <span class="text-danger">*</span></label>
                                <select asp-for="MeetingId" class="form-select" asp-items="ViewBag.Meetings">
                                    <option value="">-- Select Meeting --</option>
                                </select>
                                <span asp-validation-for="MeetingId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="StaffId" class="form-label">Staff Member <span class="text-danger">*</span></label>
                                <select asp-for="StaffId" class="form-select" asp-items="ViewBag.Staff">
                                    <option value="">-- Select Staff --</option>
                                </select>
                                <span asp-validation-for="StaffId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="IsPresent" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsPresent" class="form-check-label">Is Present</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label">Remarks</label>
                            <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Any additional notes..."></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i> Add Member
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i> Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
