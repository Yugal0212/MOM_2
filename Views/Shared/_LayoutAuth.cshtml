<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"] - MOM Management System</title>
    <meta content="Minutes of Meeting Management System" name="description">
    <meta content="MOM, Meeting Management, Organization" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true">

    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --text-color: #333;
            --text-muted: #666;
            --input-border: #e0e0e0;
            --input-focus: #667eea;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        .auth-wrapper {
            display: flex;
            min-height: 100vh;
            width: 100%;
            background: #fff;
        }

        /* Left Side */
        .auth-left {
            flex: 1;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 8%;
            color: white;
            position: relative;
            overflow: hidden;
            width: 50%;
        }

        /* Animated Background pattern */
        .auth-left::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,138.7C960,139,1056,117,1152,96C1248,75,1344,53,1392,42.7L1440,32L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
            background-size: cover;
            background-position: bottom;
            opacity: 0.6;
        }
        
        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            pointer-events: none;
            animation: float 15s infinite ease-in-out;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0) translateX(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-100vh) translateX(100px); opacity: 0; }
        }

        .auth-left-content {
            position: relative;
            z-index: 2;
        }

        .brand-logo {
            font-size: 3rem;
            margin-bottom: 2rem;
            display: inline-block;
            background: rgba(255,255,255,0.2);
            width: 80px;
            height: 80px;
            line-height: 80px;
            text-align: center;
            border-radius: 50%;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.3);
        }

        .auth-left h1 {
            font-size: 3.5rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            text-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .auth-left p {
            font-size: 1.1rem;
            line-height: 1.6;
            opacity: 0.9;
            max-width: 80%;
            margin-bottom: 2rem;
        }

        .glass-badge {
            display: inline-block;
            background: rgba(255,255,255,0.15);
            padding: 10px 20px;
            border-radius: 30px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255,255,255,0.2);
            font-size: 0.9rem;
            margin-top: 1rem;
        }

        /* Right Side */
        .auth-right {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            background-color: #f8f9fa;
            position: relative;
            width: 50%;
        }

        .auth-form-wrapper {
            width: 100%;
            max-width: 450px;
            padding: 2.5rem;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.05); /* Soft shadow */
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Form Styles */
        .form-label {
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .input-group {
            border: 1px solid var(--input-border);
            border-radius: 0.5rem;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .input-group:focus-within {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .input-group-text {
            background: #fff;
            border: none;
            color: #999;
            padding-left: 1rem;
        }
        
        .form-control {
            border: none;
            padding: 0.8rem 1rem;
            font-size: 14px;
        }

        .form-control:focus {
            box-shadow: none;
        }
        
        .input-group:focus-within .input-group-text {
            color: var(--primary-color);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            padding: 0.8rem;
            font-weight: 600;
            width: 100%;
            border-radius: 0.5rem;
            margin-top: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(102, 126, 234, 0.2);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(102, 126, 234, 0.3);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        .auth-footer {
            text-align: center;
            margin-top: 2rem;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .auth-footer a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
        }

        .auth-footer a:hover {
            text-decoration: underline;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .auth-left h1 { font-size: 2.5rem; }
        }

        @@media (max-width: 768px) {
            .auth-wrapper {
                flex-direction: column;
            }

            .auth-left {
                flex: none;
                width: 100%;
                min-height: 280px;
                padding: 40px 30px;
                text-align: center;
                align-items: center;
            }

            .auth-left p { display: none; }
            .auth-left h1 { font-size: 2rem; margin-bottom: 0.5rem; }
            .brand-logo { margin-bottom: 1rem; width: 60px; height: 60px; line-height: 60px; font-size: 1.8rem; }
            .glass-badge { display: none; }

            .auth-right {
                flex: 1;
                width: 100%;
                padding: 20px;
                background: #fff;
                justify-content: flex-start;
            }

            .auth-form-wrapper {
                box-shadow: none;
                padding: 1rem 0;
                background: transparent;
            }
        }
    </style>
</head>

<body>
    <div class="auth-wrapper">
        <!-- Left Side: Branding -->
        <div class="auth-left">
            <!-- Particles -->
            <div class="particle" style="width: 10px; height: 10px; left: 10%; animation-delay: 0s;"></div>
            <div class="particle" style="width: 15px; height: 15px; left: 20%; animation-delay: 2s;"></div>
            <div class="particle" style="width: 8px; height: 8px; left: 30%; animation-delay: 4s;"></div>
            <div class="particle" style="width: 12px; height: 12px; left: 40%; animation-delay: 1s;"></div>
            <div class="particle" style="width: 10px; height: 10px; left: 50%; animation-delay: 3s;"></div>
            
            <div class="auth-left-content">
                <div class="brand-logo">
                    <i class="bi bi-diagram-3-fill"></i>
                </div>
                <h1>Welcome to<br>MOM System</h1>
                <p>Streamline your meetings, track decisions, and organize your minutes efficiently with our all-in-one management platform.</p>
                <div class="glass-badge">
                    <i class="bi bi-shield-check me-2"></i> Secure & Reliable
                </div>
            </div>
        </div>

        <!-- Right Side: Form -->
        <div class="auth-right">
            <div class="auth-form-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Form validation feedback
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
            
            // Input focus styling helper
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.closest('.input-group')?.classList.add('focused');
                });
                input.addEventListener('blur', function() {
                    this.closest('.input-group')?.classList.remove('focused');
                });
            });
        });
    </script>
</body>
</html>
