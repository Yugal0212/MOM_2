@model MOM.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="text-center mb-4">
    <h2 class="fw-bold" style="color: #333;">Sign In</h2>
    <p class="text-muted">Enter your email and password to continue</p>
</div>

<div class="alert alert-info alert-dismissible fade show mb-4" role="alert" style="font-size: 0.85rem; border: none; background: rgba(102, 126, 234, 0.1); color: #4a5568;">
    <div class="d-flex">
        <div class="me-2"><i class="bi bi-info-circle-fill text-primary"></i></div>
        <div>
            <strong>Demo Credentials:</strong><br>
            <span class="user-select-all">john@example.com</span> / <span class="user-select-all">123456</span>
        </div>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-controller="Account" asp-action="Login" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 0.9rem;"></div>
    
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email Address</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
            <input asp-for="Email" class="form-control" placeholder="name@example.com" required autocomplete="email" />
        </div>
        <span asp-validation-for="Email" class="text-danger" style="font-size: 0.8rem;"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
            <input asp-for="Password" class="form-control" placeholder="Enter your password" required autocomplete="current-password" />
        </div>
        <span asp-validation-for="Password" class="text-danger" style="font-size: 0.8rem;"></span>
    </div>

    <div class="mb-4 d-flex justify-content-between align-items-center">
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label text-muted" style="font-size: 0.9rem;">Remember me</label>
        </div>
        <a href="#" style="font-size: 0.9rem; color: #667eea;">Forgot password?</a>
    </div>

    <div class="d-grid mb-3">
        <button class="btn btn-primary btn-lg" type="submit">
            Sign In
        </button>
    </div>
    
    <div class="auth-footer">
        <p class="mb-0">
            Don't have an account? 
            <a asp-controller="Account" asp-action="Register">Create Account</a>
        </p>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
